{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@aino/core/*": ["./@aino/core/*"]
    },
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "@aino/**/*.ts",
    "@aino/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
} 